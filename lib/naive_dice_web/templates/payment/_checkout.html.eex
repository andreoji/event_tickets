<form action="<%= Routes.payment_path(@conn, :create) %>" method="POST">
  <input type="hidden" value="<%= csrf_token() %>" name="_csrf_token"/>
  <script
    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key=<%= stripe_pub_key() %>
    data-amount=<%= @event.price %>
    data-name=<%= @event.title %>
    data-description="ticket charge"
    data-image="https://stripe.com/img/documentation/checkout/marketplace.png"
    data-locale="auto"
    data-currency=<%= @event.currency %>>
  </script>